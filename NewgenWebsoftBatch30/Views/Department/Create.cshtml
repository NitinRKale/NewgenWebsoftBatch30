@model NewgenWebsoftBatch30.Models.Department

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="departmentForm" asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeptName" class="control-label"></label>
                <input asp-for="DeptName" class="form-control" required />
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/DepartmentController.js"></script>
}